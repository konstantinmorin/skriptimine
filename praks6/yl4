#!/bin/bash
#algarvu tuvastamine

echo -e "Siseta suvaline arv \c"
read arv
#kontrollime kui on 0 v천i 1, siis teade
if [ $arv -ew -o $arv -eq 1 ]; then
	echo "$arv - ei ole algarv"
else
	#muu juhul jagame jagajaga, mis v천rdub 2
	jagaja=2
	jaak=$(($arv % jagaja))
	#teeme senikaua jaak=0
	while [ $jaak -ne 0 ]
	do 
		#Lisame jagajale 1
		jagaja=$(($jagaja + 1))
		#jagame arv jagajaga
		jaak=$(($arv % $jagaja))
	done
	if [ $arv -eq $jagaja ]; then
		#kontrollime kui arv=jagaja, siis j채rgmine teade:
		echo "$arv - on algarv"
	else
		#teistel juhtude j채rmine teade:
		echo "$arv - ei ole algarv"
	fi
fi
